{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "emitDeclarationOnly": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    
    /* Additional Safety Rules */
    "exactOptionalPropertyTypes": true,    // Stricter handling of optional properties
    "noUncheckedIndexedAccess": true,     // Safer array/object access
    "noImplicitOverride": true,           // Require explicit override keyword
    "noPropertyAccessFromIndexSignature": true, // Prevent accidental property access
    "allowUnusedLabels": false,           // Catch unused labels
    "allowUnreachableCode": false,        // Catch unreachable code
    "checkJs": true,                      // Type check JS files
    "forceConsistentCasingInFileNames": true // Ensure consistent file casing
  },
  "include": ["vite.config.ts"]
}
